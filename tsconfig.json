{
  "compilerOptions": {
    "target": "es2015",
    "module": "ES2020",
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": false,
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": ["src/"]
}
