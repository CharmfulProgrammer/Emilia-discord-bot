{
  "compilerOptions": {
    "target": "es2015",
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": false,
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@libs/*": ["libs/*"]
    }
  },
  "include": ["src/"]
}
